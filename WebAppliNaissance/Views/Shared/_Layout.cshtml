@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Commune | Enregistrement des naissances</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        .navbar-brand {
            font-weight: bold;
        }
        .footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            margin-top: 20px;
        }
        .certificate {
            border: 2px solid #000;
            padding: 20px;
            margin: 20px 0;
            background-color: #fff;
        }
        .certificate-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .certificate-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }
        .certificate-body {
            margin: 20px 0;
        }
        .signature {
            margin-top: 50px;
            text-align: right;
        }
        .print-button {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #003366;">
            <div class="container-fluid">
                <a class="navbar-brand text-white" href="/">Commune | Enregistrement des naissances</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/">Accueil</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <!-- Menu Naissance -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="naissanceDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Naissances
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Naissance" asp-action="Index">Liste des naissances</a></li>
                                    <li><a class="dropdown-item" asp-controller="Naissance" asp-action="Create">Ajouter une naissance</a></li>
                                </ul>
                            </li>

                            <!-- Menu Declarant -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="declarantDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Déclarants
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="Declarant" asp-action="Index">Liste des déclarants</a></li>
                                    <li><a class="dropdown-item" asp-controller="Declarant" asp-action="Create">Ajouter un déclarant</a></li>
                                </ul>
                            </li>

                            <!-- Profil utilisateur -->
                            <li class="nav-item">
                                <span class="nav-link text-white">
                                    Bonjour @UserManager.GetUserName(User)!
                                </span>>
                            </li>

                            <!-- Déconnexion -->
                            <li class="nav-item">
                                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0">Se déconnecter</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <!-- Connexion/Inscription -->
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">S'inscrire</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Commune - Enregistrement des naissances
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function printCertificate() {
            window.print();
        }
    </script>
</body>
</html>