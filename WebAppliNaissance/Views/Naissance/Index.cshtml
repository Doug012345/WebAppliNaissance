@model IEnumerable<WebAppliNaissance.Models.Naissance>

@{
    ViewData["Title"] = "Liste des naissances";
}

<h1>Liste des naissances</h1>

<!-- Barre de recherche -->
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Rechercher par nom, prénom, numéro d'acte..." value="@ViewData["CurrentFilter"]" />
        <button type="submit" class="btn btn-primary">Rechercher</button>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Enregistrer une nouvelle naissance</a>
</p>

@if (!Model.Any())
{
    <p class="text-muted">Aucune naissance trouvée.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().NumeroActe)</th>
                <th>@Html.DisplayNameFor(model => model.First().NomEnfant)</th>
                <th>@Html.DisplayNameFor(model => model.First().PrenomEnfant)</th>
                <th>@Html.DisplayNameFor(model => model.First().DateNaissance)</th>
                <th>@Html.DisplayNameFor(model => model.First().LieuNaissance)</th>
                <th>@Html.DisplayNameFor(model => model.First().Sexe)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NumeroActe</td>
                    <td>@item.NomEnfant</td>
                    <td>@item.PrenomEnfant</td>
                    <td>@item.DateNaissance.ToString("dd/MM/yyyy")</td>
                    <td>@item.LieuNaissance</td>
                    <td>@item.Sexe</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                        <a asp-action="Certificat" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Certificat</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Supprimer</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
